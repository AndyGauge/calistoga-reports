
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= simple_form_for(@report, html: { class: 'form-horizontal' }) do |form| %>
        <%= form.association :store, label_method: :display %>
        <%= form.input :date, as: 'string', required: true, input_html: {
          :data => {:provide => :datepicker, :'date-format' => "yyyy-mm-dd",
            :'date-autoclose' => true}} %>
        <%= form.input :amount, required: true, wrapper: :vertical_input_group do %>
          <span class="input-group-addon">$</span>
          <%= form.input_field :amount, class: "form-control" %>
        <% end %>
        <%= form.input :deposit, required: true, wrapper: :vertical_input_group do %>
          <span class="input-group-addon">$</span>
          <%= form.input_field :deposit, class: "form-control" %>
        <% end %>
        <%= form.input :notes, as: 'text', input_html: { rows: "4" } %>
        <%= form.button :submit %>
      <% end %>

    </div>
  </div>
