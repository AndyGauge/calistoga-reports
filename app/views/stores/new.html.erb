
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= simple_form_for(@store, html: { class: 'form-horizontal' }) do |form| %>
        <%= form.input :number, input_html: { value: form.object.class.maximum("number").to_i + 1 } %>
        <%= form.input :name %>
        <%= form.button :submit %>
      <% end %>

    </div>
  </div>
